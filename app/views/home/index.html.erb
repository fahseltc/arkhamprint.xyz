<div class="header">
  <h1>ArkhamPrint</h1>
</div>
Please provide a deck URL or the deck id from <%= link_to "ArkhamDB", "https://arkhamdb.com"%>
<p>

<div class="content">
  <%= form_with  url:'/from_deck', method: :get, local: true, data: {turbo: "false"} do |form| %>
  <!-- turbo: false is very important! -->
  <%= form.textarea :id, size: "70x1" %>
  <%= form.submit "Get  PDF" %>
  <% end %>

  <%= form_with  url:'/from_card_list', method: :get, local: true, data: {turbo: "false"} do |form| %>
  <!-- turbo: false is very important! -->
  Input cards IDs comma seperated
  <%= form.textarea :card_ids, size: "70x1" %>
  <%= form.submit "Get  PDF" %>
  <% end %>
</div>